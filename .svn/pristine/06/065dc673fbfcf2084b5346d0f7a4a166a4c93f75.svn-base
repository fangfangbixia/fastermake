* {
	padding:0;
	margin:0;
    list-style: none;
    font-family: "Microsoft Yahei","Arial","Helvetica";
}
body{
	background: #f5f5f5;
	height:100%;
	font-size: 12px;
	color:#666;
	width:100%;
	margin:0 auto;
}
a{
	text-decoration: none;
}
.buyer_tit{
	line-height: 30px;
	color:#666;
}
.buyer_tit a{
	display: inline-block;
	color:#666;
	padding:0 5px;
}
.buyer_sort{
	height: 50px;
    background: #fff;
    line-height: 50px;
}
.buyer_box{
	position: relative;
	height:75px;
	left:-25px;
}
.a_img{
	float:left;
	display:block;
	width:60px;
	height:60px;
	border:1px solid #ccc;
	border-radius: 50%;
	overflow: hidden;
}
.big-buyer-title {
	float:left;
	padding-left:15px;
}
.haizol-gray-link{
	color:#333;
	font-weight: bold;
	font-size: 20px;
	line-height: 50px;
	text-decoration: none;
}
.buyer-cont{
	color:#999;
	line-height: 20px;
	padding:0 50px;
	padding-left:15px;
}
.buyer-comment{
	margin-top:30px;
	color:#333;
}
.comment-box{
	height:75px;
	max-height:75px;
	border:1px solid #ddd;
	overflow: auto;
	box-sizing: border-box;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	line-height: 20px;
}
.comm_hand{
	position: relative;
	height: 75px;
}
.simple-title{
	color:#006DCC;
	font-size: 14px;
	font-weight: bold;
}
.div_btn{
	margin-top:50px;
	margin-left:50px;
}
.comment-01{
	padding:0 50px;
	padding-bottom: 20px;
	padding-left:30px;
}
.comment-01 h5{
	padding-left:0;
}
.box_01{
	padding:15px 0;
	margin:15px -15px;
	margin-top:5px;
}

.span_02{
	position: absolute;
	right:7px;
	top:0px;
	color:#329C61;
	font-size: 14px;
}
.div_btn .btn{
	background:#006DCC;
	padding:8px 32px;
	border:0 none;
	font-size:16px;
	border-radius:0;
	padding:0;
	width:120px;
	height:40px;
	text-align:center;
	line-height:40px;
}
.div_btn .btn:hover{
	background-color: #0543be;
}
#biuuu_link{
	text-align: center;
	padding-bottom: 50px;
}

.beforeFoot{
	margin-bottom: 150px;
}
.right_p p{
	font-size:14px;
}
