                           $('#factory_type').next().find('a:last').css({'background-color':'#ddd','border-color':'#ddd'}).removeAttr('onclick');
                       }
                       //邮箱
					   $('#email').text(factoryInfo.email);

                       if(factoryInfo.factoryStatus == 1){
                           $('#inspection_status').html('实地考察通过');
