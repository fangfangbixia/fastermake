                           $('#statisticsCount').find('td:eq(6)').append('<b>0</b>');
                           $('#statisticsCount').find('td:eq(7)').append('<b>0</b>');
                       }
                   }else if(result.state == 2){
                       //如果还未登录，跳转登录页
                       window.location = "/backstage/login.html";
                   }
               }
           })





			  
