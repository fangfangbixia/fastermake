<?xml version="1.0" encoding="UTF-8"?>

<configuration>
  <property name="LOG_PATH" value="${catalina.home}/logs" />

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <File>${LOG_PATH}/fastermake.log</File>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${catalina.home}/logs/fastermake.%d{yyyy-ww}.log</fileNamePattern>
      <maxHistory>12</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</pattern>        
      <charset>UTF-8</charset>
    </encoder>
  </appender>
  
  <appender name="errorFile" class="ch.qos.logback.core.rolling.RollingFileAppender">  
   	<File>${LOG_PATH}/fastermake_error.log</File>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">  
        <fileNamePattern>${catalina.home}/logs/fastermake_error.%d{yyyy-ww}.log</fileNamePattern>
        <maxHistory>12</maxHistory>
      	<totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>  
    <encoder>  
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</pattern>     
        <charset>UTF-8</charset>
    </encoder>  
    <!-- 只打印错误日志 -->
    <filter class="ch.qos.logback.classic.filter.LevelFilter">  
        <level>ERROR</level>  
        <onMatch>ACCEPT</onMatch>  
        <onMismatch>DENY</onMismatch>  
    </filter>  
	</appender>
  
  	<logger name="com.cbt" level="INFO"/>
  	<logger name="com.cbt.dao.QuoteProductMapper" level="INFO" >
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  	</logger>
  	<logger name="org.ibatis" level="INFO" >
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  	</logger>
  	<logger name="org.apache.ibatis" level="INFO" >
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  	</logger>
	<logger name="org.apache.ibatis.common.jdbc.SimpleDataSource" level="INFO" >
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  	</logger>  
	<logger name="org.apache.ibatis.common.jdbc.ScriptRunner" level="INFO" >
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  	</logger>     
	<logger name="org.apache.ibatis.common.jdbc.SqlMapClientDelegate" level="INFO" >
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  	</logger>  
	<logger name="java.sql.Connection" level="INFO" >
    <appender-ref ref="file"/>
  	</logger>  
	<logger name="java.sql.Statement" level="INFO" >
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  	</logger>  
	<logger name="java.sql.PreparedStatement" level="INFO" >
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  	</logger> 

  <logger name="org.springframework.web.filter.DelegatingFilterProxy" additivity="false" level="ERROR">
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  </logger>
  <logger name="org.springframework.jdbc.datasource" additivity="false" level="INFO">
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  </logger>
  <logger name="org.mybatis.spring" additivity="false" level="INFO">
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  </logger> 

  <root level="INFO">
    <appender-ref ref="file"/>
    <appender-ref ref="errorFile"/>
  </root>
</configuration>